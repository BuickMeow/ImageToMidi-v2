<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 主要按钮样式 - 用于应用中的主要操作按钮 -->
    <Style Selector="Button.primary-button">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Name="PART_Border"
                        Background="{StaticResource PrimaryButtonBrush}"
                        CornerRadius="3"
                        BorderThickness="0">
                    <Border.Transitions>
                        <Transitions>
                            <!-- 背景颜色过渡动画 -->
                            <BrushTransition Property="Background" Duration="0:0:0.2"/>
                        </Transitions>
                    </Border.Transitions>
                    
                    <!-- 按钮内容容器 -->
                    <ContentPresenter Name="PART_ContentPresenter"
                                    Content="{TemplateBinding Content}"
                                    Foreground="{StaticResource PrimaryTextBrush}"
                                    HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                    Padding="{TemplateBinding Padding}"/>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
    
    <!-- 鼠标悬停状态下的背景颜色 -->
    <Style Selector="Button.primary-button:pointerover /template/ Border#PART_Border">
        <Setter Property="Background" Value="{StaticResource PrimaryButtonHoverBrush}"/>
    </Style>
    <!-- 鼠标悬停状态下的文字颜色 -->
    <Style Selector="Button.primary-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>
    
    <!-- 鼠标按下状态下的背景颜色 -->
    <Style Selector="Button.primary-button:pressed /template/ Border#PART_Border">
        <Setter Property="Background" Value="{StaticResource PrimaryButtonPressedBrush}"/>
    </Style>
    <!-- 鼠标按下状态下的文字颜色 -->
    <Style Selector="Button.primary-button:pressed /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>
    
    <!-- 禁用状态下的背景颜色 -->
    <Style Selector="Button.primary-button:disabled /template/ Border#PART_Border">
        <Setter Property="Background" Value="{StaticResource PrimaryButtonDisabledBrush}"/>
    </Style>
    <!-- 禁用状态下的文字颜色 -->
    <Style Selector="Button.primary-button:disabled /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Foreground" Value="{StaticResource DisabledTextBrush}"/>
    </Style>
    
    <!-- 窗口控制按钮样式 -->
    <Style Selector="Button.window-control-button">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Margin" Value="3"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        CornerRadius="{TemplateBinding CornerRadius}"/>
            </ControlTemplate>
        </Setter>
    </Style>
    
</Styles>