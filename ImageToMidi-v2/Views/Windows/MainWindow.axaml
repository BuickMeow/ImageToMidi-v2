<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ImageToMidi_v2.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="using:ImageToMidi_v2"
        mc:Ignorable="d" d:DesignWidth="1186" d:DesignHeight="496"
        x:Class="ImageToMidi_v2.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/i2m.ico"
        Title="Image To MIDI"
        Classes="main-window"
		Width="1186"
        Height="496">

    <Design.DataContext>
        <!-- 这只是为IDE预览器设置DataContext，实际运行时的DataContext在代码中设置 -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <DockPanel>
        <!-- 自定义标题栏 -->
        <Border Classes="title-bar"
                DockPanel.Dock="Top" 
                x:Name="TitleBar"
                PointerPressed="TitleBar_PointerPressed">
            <DockPanel>
                <!-- 应用图标 -->
                <Image Classes="app-icon"
                       Source="/Assets/i2m.png"
                       DockPanel.Dock="Left"/>
                
                <!-- 标题文字 -->
                <TextBlock Text="Image To MIDI" 
                           Classes="title-text"
                           DockPanel.Dock="Left"/>
                
                <!-- 窗口控制按钮 -->
                <StackPanel DockPanel.Dock="Right" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Right" 
                           Margin="0,0,10,0"
                           VerticalAlignment="Center">
                    
                    <!-- 最小化按钮 -->
                    <Button Name="MinimizeButton" 
                            Classes="window-control-button"
                            Background="{StaticResource MinimizeButtonBrush}"
                            Click="MinimizeButton_Click"/>
                    
                    <!-- 退出按钮 -->
                    <Button Name="ExitButton" 
                            Classes="window-control-button"
                            Background="{StaticResource CloseButtonBrush}"
                            Click="ExitButton_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>
        
        <!-- 主要内容区域，使用2-3-2布局 -->
        <Grid Classes="main-content" 
              DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 左侧区域 (2*) - 图片区域 -->
            <DockPanel Grid.Column="0" Margin="7">
                <!-- 浏览图片按钮 -->
                <Button DockPanel.Dock="Top"
                        Content="浏览图片"
                        Classes="primary-button"
                        Margin="0,0,0,6"
                        Command="{Binding BrowseImageCommand}"/>
                
                <!-- 可缩放图片控件 -->
                <controls:ZoomableImage DockPanel.Dock="Bottom"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      Background="{StaticResource SecondaryBackgroundBrush}"
                                      ImageSource="{Binding ImagePath}"/>
            </DockPanel>
            
            <!-- 中间区域 (3*) - 主要内容 -->
            <Grid Grid.Column="1" Margin="5">
                <TextBlock Text="主要内容区域" 
                           Classes="content-placeholder"/>
            </Grid>
            
            <!-- 右侧区域 (2*) - 控制面板 -->
            <Grid Grid.Column="2" Margin="5">
                <TextBlock Text="控制面板" 
                           Classes="content-placeholder"/>
            </Grid>
        </Grid>
    </DockPanel>

</Window>
