<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ImageToMidi_v2.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="using:ImageToMidi_v2"
        mc:Ignorable="d" d:DesignWidth="1186" d:DesignHeight="496"
        x:Class="ImageToMidi_v2.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/i2m.ico"
        Title="Image To MIDI"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="50"
        Background="#263238"
		Width="1186"
        Height="496">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <DockPanel>
        <!-- Custom Title Bar -->
        <Border Background="#37474F" 
                DockPanel.Dock="Top" 
                Height="50" 
                x:Name="TitleBar"
                PointerPressed="TitleBar_PointerPressed">
            <DockPanel>
                <!-- App Icon -->
                <Image Width="40" 
                       Height="40" 
                       Margin="5" 
                       Source="/Assets/i2m.png"
                       DockPanel.Dock="Left"/>
                
                <!-- Title -->
                <TextBlock Text="Image To MIDI" 
                           Margin="10,0,0,0" 
                           DockPanel.Dock="Left"
                           VerticalAlignment="Center" 
                           FontSize="20"
                           Foreground="White"/>
                
                <!-- Window Controls -->
                <StackPanel DockPanel.Dock="Right" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Right" 
                           Margin="0,0,10,0"
                           VerticalAlignment="Center">
                    
                    <Button Name="MinimizeButton" 
                            Background="Orange" 
                            Width="20" 
                            Height="20" 
                            Margin="3"
                            BorderThickness="0"
                            CornerRadius="3"
                            Click="MinimizeButton_Click">
                        <Button.Template>
                            <ControlTemplate>
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="{TemplateBinding CornerRadius}"/>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <Button Name="ExitButton" 
                            Background="Red" 
                            Width="20" 
                            Height="20" 
                            Margin="3"
                            BorderThickness="0"
                            CornerRadius="3"
                            Click="ExitButton_Click">
                        <Button.Template>
                            <ControlTemplate>
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="{TemplateBinding CornerRadius}"/>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>
        
        <!-- 主要内容区域，使用2-3-2布局 -->
        <Grid DockPanel.Dock="Bottom" Background="#263238">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 左侧区域 (2*) - 图片区域 -->
            <DockPanel Grid.Column="0" Margin="5">
                <!-- 浏览图片按钮 -->
                <Button DockPanel.Dock="Top"
                        Content="浏览图片"
                        Background="#3F51B5"
                        Foreground="White"
                        CornerRadius="3"
                        BorderThickness="0"
                        Padding="15,8"
                        Margin="0,0,0,10"
                        HorizontalAlignment="Center"
                        FontSize="14"
                        Command="{Binding BrowseImageCommand}"/>
                
                <!-- 可缩放图片控件 -->
                <controls:ZoomableImage DockPanel.Dock="Bottom"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      Background="#37474F"
                                      ImageSource="{Binding ImagePath}"/>
            </DockPanel>
            
            <!-- 中间区域 (3*) - 主要内容 -->
            <Grid Grid.Column="1" Margin="5">
                <TextBlock Text="主要内容区域" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="White"
                           FontSize="16"/>
            </Grid>
            
            <!-- 右侧区域 (2*) - 控制面板 -->
            <Grid Grid.Column="2" Margin="5">
                <TextBlock Text="控制面板" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="White"
                           FontSize="16"/>
            </Grid>
        </Grid>
    </DockPanel>

</Window>
